<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/item_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_app_label"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/item_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_app_name"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/item_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_class_name"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/item_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_version_name"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/item_version_code"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"/>

</RelativeLayout>